# OpenAI API Configuration (Primary & Fallback)
OPENAI_API_KEY=sk-your-api-key-here
MODEL_NANO=gpt-4o-mini
MODEL_MINI=gpt-4o-mini
MODEL_SONNET=gpt-4o

# DeepSeek API Configuration (For Classification)
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# Google Gemini API Configuration (For Summarization & Digest)
GOOGLE_API_KEY=your-google-api-key
GEMINI_MODEL=gemini-2.0-flash

# LLM Provider Selection (Options: deepseek, gemini, openai)
CLASSIFICATION_PROVIDER=deepseek
SUMMARIZATION_PROVIDER=gemini
DIGEST_PROVIDER=gemini

# Database Configuration
DB_PATH=./news.db

# Pipeline Configuration
CONFIDENCE_THRESHOLD=0.70
MAX_ITEMS_PER_FEED=120
REQUEST_TIMEOUT_SEC=12
SCRAPING_TIMEOUT_SEC=30
MAX_CONCURRENT_REQUESTS=10

# Cost Limits
DAILY_COST_LIMIT=2.0
MONTHLY_COST_LIMIT=50.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Output Configuration
OUTPUT_DIR=./out

# Feature Flags
ENABLE_BATCH_API=true
ENABLE_CACHING=true
ENABLE_PLAYWRIGHT_FALLBACK=true

# Email Configuration
EMAIL_RECIPIENTS=user@example.com,another@example.com
EMAIL_AUTO_SEND=false
EMAIL_SUBJECT_TEMPLATE=Bonit√§ts-News: {date} - {count} relevante Artikel
